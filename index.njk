<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Afrobeat Kollectif</title>
  <meta name="description" content="{{ airtable['À propos'].Texte }}">
  <meta name="author" content="Kim Laï TRINH">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Agbalumo&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Agbalumo&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Agbalumo&family=Roboto+Condensed:wght@500;700&display=swap" rel="stylesheet">
  {% set css %}
    {% include "css/reset.css" %}
    {% include "css/styles.css" %}
  {% endset %}
  <style>
    {{ css | cssmin | safe }}
  </style>
</head>
<body>
  <main>
    <div class="cover">
      <h1 data-text="Afrobeat Kollectif">Afrobeat Kollectif</h1>
      <div class="tagline">
        <div>fela kuti</div>
        <div>tribute band - marseille</div>
      </div>
    </div>
    <div class="about">
      <div>
        <div class="image">
          <img src="{{ airtable['À propos'].Photo[0].url }}"></img>
        </div>
        <p class="content">{{ airtable['À propos'].Texte }}</p>
      </div>
    </div>
    </div>
    <div class="next-concerts">
      <div>
        <div class="content">
          <h2>{{ airtable['Prochaines dates'].Titre }}</h2>
          {{ airtable['Prochaines dates'].Texte | markdown | safe }}
        </div>
        <div class="image">
          <img src="{{ airtable['Prochaines dates'].Photo[0].url }}"></img>
        </div>
      </div>
    </div>
    <div class="band-members">
      <div>
        <div class="image">
          <img src="{{ airtable['Les musicien•nes'].Photo[0].url }}"></img>
        </div>
        <div class="content">
          <h2>{{ airtable['Les musicien•nes'].Titre }}</h2>
          {{ airtable['Les musicien•nes'].Texte | markdown | safe }}
        </div>
      </div>
    </div>
    <div class="contact">
      <div>
        <div class="content">
          <h2>{{ airtable['Contact'].Titre }}</h2>
          {{ airtable['Contact'].Texte | markdown | safe }}
        </div>
        <div class="image">
          <img src="{{ airtable['Contact'].Photo[0].url }}"></img>
        </div>
      </div>
    </div>
  </main>
</html>
